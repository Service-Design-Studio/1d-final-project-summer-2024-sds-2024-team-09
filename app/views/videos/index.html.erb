<% content_for :title, "Video History" %>

<div class="container mt-5">
  <div class="text-center">
    <h1 class="display-4">Video History</h1>
    <div class="d-flex justify-content-center mb-4">
      <label for="month" class="mr-2">Filter by Month:</label>
      <select id="month" class="form-control ml-2" onchange="filterVideos()">
        <option value="">Select Month</option>
        <% Date::MONTHNAMES.each_with_index do |month, index| %>
          <% next if month.nil? %>
          <option value="<%= index %>"><%= month %></option>
        <% end %>
      </select>
      <label for="year" class="ml-3 mr-2">Filter by Year:</label>
      <select id="year" class="form-control ml-2" onchange="filterVideos()">
        <option value="">Select Year</option>
        <% (2000..Date.today.year).each do |year| %>
          <option value="<%= year %>"><%= year %></option>
        <% end %>
      </select>
      <label for="sort" class="ml-3 mr-2">Sort by:</label>
      <select id="sort" class="form-control ml-2" onchange="sortVideos()">
        <option value="latest">Latest</option>
        <option value="earliest">Earliest</option>
      </select>
    </div>
    <div class="list-group mt-4">
      <% @videos.each do |video| %>
        <div class="list-group-item video-item d-flex align-items-center" data-month="<%= video.upload_date.month %>" data-year="<%= video.upload_date.year %>">
          <div class="video-thumbnail">
            <%= video_tag video.url, class: 'img-fluid', controls: true %>
          </div>
          <div class="video-details ml-3">
            <h2>
              <a href="<%= video.url %>" class="video-title" data-target="video-<%= video.id %>">
                <%= video.title %>
              </a>
            </h2>
            <p>Uploaded on: <%= video.upload_date.strftime("%B %d, %Y %I:%M %p") %></p>
            <%= link_to 'Edit', edit_video_path(video), class: "btn btn-secondary btn-sm" %>
            <%= link_to 'Delete', video, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function filterVideos() {
    const month = document.getElementById('month').value;
    const year = document.getElementById('year').value;
    const url = new URL(window.location.href);
    if (month) {
      url.searchParams.set('month', month);
    } else {
      url.searchParams.delete('month');
    }
    if (year) {
      url.searchParams.set('year', year);
    } else {
      url.searchParams.delete('year');
    }
    window.location.href = url.toString();
  }

  function sortVideos() {
    const sort = document.getElementById('sort').value;
    const url = new URL(window.location.href);
    url.searchParams.set('sort', sort);
    window.location.href = url.toString();
  }
</script>

