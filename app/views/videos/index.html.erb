<% content_for :title, "Video History" %>

<div class="container mt-5">
  <div class="text-center">
    <h1 class="display-4">Video History</h1>
    <div class="d-flex justify-content-center mb-4">
      <label for="month">Sort by Month:</label>
      <select id="month" class="form-control ml-2" onchange="sortVideosByMonth()">
        <option value="">Select Month</option>
        <% Date::MONTHNAMES.each_with_index do |month, index| %>
          <% next if month.nil? %>
          <option value="<%= index %>"><%= month %></option>
        <% end %>
      </select>
    </div>
    <div class="list-group mt-4">
      <% @videos.each do |video| %>
        <div class="list-group-item video-item d-flex align-items-center" data-month="<%= video.upload_date.month %>">
          <div class="video-thumbnail">
            <%= video_tag video.url, class: 'img-fluid', controls: true %>
          </div>
          <div class="video-details ml-3">
            <h2>
              <a href="<%= video.url %>" class="video-title" data-target="video-<%= video.id %>">
                <%= video.title %>
              </a>
            </h2>
            <p>Uploaded on: <%= video.upload_date.strftime("%B %d, %Y %I:%M %p") %></p>
            <%= link_to 'Edit', edit_video_path(video), class: "btn btn-secondary btn-sm" %>
            <%= link_to 'Delete', video, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  function sortVideosByMonth() {
    const selectedMonth = document.getElementById('month').value;
    document.querySelectorAll('.video-item').forEach(item => {
      if (!selectedMonth || item.dataset.month === selectedMonth) {
        item.style.display = 'flex';
      } else {
        item.style.display = 'none';
      }
    });
  }
</script>

<style>
  .video-thumbnail {
    width: 200px;
    height: auto;
    flex-shrink: 0;
  }

  .video-details {
    flex-grow: 1;
  }

  .video-item {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .video-title {
    font-size: 1.5rem;
    color: #007bff;
  }

  .video-title:hover {
    text-decoration: underline;
  }
</style>
